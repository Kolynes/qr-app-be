{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "declaration": true, 
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true 
   },
   "exclude": [
      "./node_modules",
      "./build"
    ]
}